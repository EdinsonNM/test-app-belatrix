{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",

    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/@types"
  ],
  "exclude": [
    "src/*.spec.ts"
  ]
}