{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "types": [
    // add node as an option
    "node"
    ],
    // typeRoots option has been previously configured
    "typeRoots": [
    // add path to @types
    "node_modules/@types"
    ]
  }
}